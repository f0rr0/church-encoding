{
  'extends': [
    'eslint:recommended',
    'plugin:import/errors',
    'plugin:import/warnings',
    'plugin:jest/recommended',
    'plugin:prettier/recommended'
  ],
  'env': {
    'browser': true,
    'node': true,
    'es6': true,
    'jest': true
  },
  'parserOptions': {
    'ecmaVersion': 6,
    'sourceType': 'module'
  },
  'rules': {
    'no-unused-vars': ['error', { argsIgnorePattern: '^_' }]
  }
}
